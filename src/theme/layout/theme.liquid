<!doctype html>
<html lang="{{locale}}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>donboulton-shopify</title>
    {% if page_description %}<meta name="description" content="{{ page_description | escape }}"> {% endif %}

    <meta name="theme-color" content="#000000">

    {{ 'vendor.scss' | asset_url | stylesheet_tag }}
    {{ 'main.scss' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>

  <body>
    <div class="is-hidden">{% include 'svg-icons' %}</div>

    <main>
      {{ content_for_layout }}
    </main>

    {% comment %}
      jQuery because usually all of Shopify Plugins and app use it, so might as well...
    {% endcomment %}
    <script src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
    {% include 'webpack-setup' %}
  </body>
</html>
